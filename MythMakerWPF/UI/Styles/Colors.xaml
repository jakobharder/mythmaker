    <Color x:Key="HighlightColor">#007ACC</Color>
    <Color x:Key="HighlightColorLight">#1C97EA</Color>
    <Brush x:Key="HighlightBrush">#007ACC</Brush>
    <Brush x:Key="HighlightLightBrush">#1C97EA</Brush>
    <Brush x:Key="TextBrush">#fff</Brush>
